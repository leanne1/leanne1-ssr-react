{
  "parser": "babel-eslint",
  "plugins": ["import"],
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals" : {
    "expect": true,
    "colors": true
  },
  "rules": {
    "node/no-unsupported-features": "off",
    "import/prefer-default-export": "off",
    "react/require-default-props": "off",
    "no-confusing-arrow": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ]
  }
}
